<hr />
<div class="row">
  <div class="small-11 columns">
    <div class="small-12 columns">
      <h5><%= raw(@title) %> (<%= @rank %>)</h5>
      <p><%= raw(@description) %></p>
      <p><%= raw(@passages) %></p>
      <div id="sermon_audio_<%= @result_id %>"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  jwplayer("sermon_audio_<%= @result_id %>").setup({
    file: "<%= @audio_url %>",
    width: "720",
    height: "40",
    preload: "metadata"
  });
</script>
